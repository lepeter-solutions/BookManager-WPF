<Window x:Class="beadando.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Book" Height="350" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Title" Margin="10,10,10,0"/>
            <TextBox x:Name="TitleTextBox" Margin="10,0,10,10"/>

            <Label Content="Author" Margin="10,10,10,0"/>
            <TextBox x:Name="AuthorTextBox" Margin="10,0,10,10"/>

            <Label Content="Genre" Margin="10,10,10,0"/>
            <ComboBox x:Name="GenreComboBox" Margin="10,0,10,10">
                
            </ComboBox>

            <Button Content="Save" Margin="10" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>